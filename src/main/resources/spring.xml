<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <!-- Repository Bean -->
    <bean id="personRepository" class="com.healthcareApp.repository.PersonRepository" scope="prototype"/>

    <!-- Service Bean -->
    <bean id="personService" class="com.healthcareApp.service.PersonService" scope="prototype">
<!--        <property name="personRepository" ref="personRepository"/>-->
       <constructor-arg ref="personRepository"/>
    </bean>

    <!-- Controller Bean -->
    <bean id="personController" class="com.healthcareApp.controller.PersonController" scope="prototype">
<!--        <constructor-arg ref="personService"/>-->
    </bean>


</beans>
